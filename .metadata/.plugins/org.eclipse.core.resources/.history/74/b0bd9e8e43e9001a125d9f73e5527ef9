class GrandParent{
	
	String name;
	int age;
	long assets;
	int childrens;
	
	GrandParent(String Name, int years, long income, int liablity ){
		
		name = Name;
		age = years;
		assets = income;
		childrens = liablity;
		
	}
	
	void print() {
		
		System.out.println("Name: "+name);
		System.out.println("Age: "+age);
		System.out.println("Assets left: "+assets);
		System.out.println("Childrens I have: "+childrens);
		
	}
	
}

class Parent extends GrandParent{
	
	String pname;
	int page;
	long passets;
	int pchildrens;
	long ptotal_worth;
	long pincome;
	
	Parent(String Name, int years, long assets, int liablity) 
	{
		super(Name, years, assets, liablity);
		ptotal_worth = assets;
		
	}
	

	void print_parent() {
		
		System.out.println("Name: "+name);
		System.out.println("Age: "+age);
		System.out.println("Assets left: "+assets);
		System.out.println("Total Worth: "+ptotal_worth);
		System.out.println("Childrens I have: "+childrens);
	
	}

}
