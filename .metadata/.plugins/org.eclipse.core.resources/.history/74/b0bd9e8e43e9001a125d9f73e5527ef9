public class Family_Heirarchy {

	public static void main(String[] args) {
		

		GrandParent g0 = new GrandParent("kamlesh", 65, 30, 4);
		g0.print();
		System.out.print("-------------------------------------------------\n");
		Parent g1 = new Parent("Asim", 45, 20, 1);
		g1.print_parent();
		System.out.print("-------------------------------------------------\n");
/*		Children g2 = new Children("Abhishek", 15, 5, 0);
		g2.print_child();*/
	}

}
