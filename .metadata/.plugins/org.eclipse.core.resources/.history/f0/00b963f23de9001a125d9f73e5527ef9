class GrandParent{
	
	String name;
	int age;
	long assets;
	int childrens;
	
	GrandParent(String surname, int years, long income, int liablity ){
		
		name = surname;
		age = years;
		assets = income;
		childrens = liablity;
		
	}
	
	void print() {
		
		System.out.println("Surname: "+name);
		System.out.println("Age: "+age);
		System.out.println("Assets left: "+assets);
		System.out.println("Childrens I have: "+childrens);
		
	}
	
}

class Parent extends GrandParent{
	
	long total_worth;
	
	Parent(String surname, int years, long income, int liablity) {
		
		super(surname, years, income, liablity);
		total_worth = assets + income;
		
	}
	
	void print_parent() {
		
		System.out.println("Surname: "+name);
		System.out.println("Age: "+age);
		System.out.println("Assets left: "+assets);
		System.out.println("Childrens I have: "+childrens);
		
	}


	void print_child() {
		
		System.out.println("Surname: "+name);
		System.out.println("Age: "+age);
		System.out.println("Assets left: "+assets);
		System.out.println("Childrens I have: "+childrens);
		
	}

}



class Children extends Parent{
	
	long total_worth;
	
	Children(String surname, int years, long income, int liablity) {
		
		super(surname, years, income, liablity);
		total_worth = income + assets;
		
	}

//	Assets will flow from Super Class
	
	
	String name;
	String age;
	int childrens;
	
	void print() {
		System.out.println("Hello I am the Childrens ");
	}
}




public class Family_Heirarchy {

	public static void main(String[] args) {
		

		GrandParent g0 = new GrandParent("kamlesh", 65, 500000, 4);
		g0.print();
		System.out.print("-------------------------------------------------\n");
		Parent g1 = new Parent("Asim", 45, 100000, 1);
		g1.print_parent();
		System.out.print("-------------------------------------------------\n");
		Children g2 = new Children("Abhishek", 15, 15000, 0);
		g2.print_child();
	}

}
